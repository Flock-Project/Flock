<nav class="navbar navbar-expand-lg navbar-light login" style="background-color: #F0F2F5"> 
  <a class="navbar-brand" style="font-weight: bold" href="/"><img src="../images/birds-vector-feather-5.png" style="width: 5%;">FLOCK</imgsrc></a> 
<div class="dropdown dropleft">
  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    {{ user.name }}
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="/profile">Profile Page</a>
    <a class="dropdown-item" href="/logout">Logout</a>
  </div>
</div>
</nav>

<div class="profile-page">

  <div class="card profile-card" style="width: 30.5rem; height: 42rem; border-width: 4px; border-color:cornflowerblue; border-radius: 2%;">
    {{#if session.avatarURL}}
      <img class="profile-pic" src="{{ session.avatarURL }}" class="img-fluid rounded">
    {{else }}
      <img class="profile-pic" src="../images/helena-lopes-463976-unsplash.jpg">
    {{/if}}
        <form action="/profile" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <div class="custom-file">
            <input type="file" class="custom-file-input" name="avatar" id="avatar">
            <label class="custom-file-label" for="avatar">Change Profile Pic</label>
          </div>
        </div>
      </form>
    <div class="card-body" style="text-align:center;">
      <h5 class="card-title" contenteditable="true" style=" font-size: 2rem;">{{ user.name }}</h5>
      <p class="card-text" style="font-size: 1.5rem;">{{ user.email }}</p>
      <p class="card-text" contenteditable="true" style="font-size: 1.5rem; font-style: italic;">"{{ user.description }}"</p><br>
      <div class="profile-buttons">
        <a href="/events/create" class="btn btn-primary" style="font-size: 1.5rem;">Create Event</a>
      </div>
    </div>
  </div>
    
  <div class="map" style="border-width: 4px; border-color:cornflowerblue">
    <img src="../images/map-no-params.png" style="width: 77rem; height: 51rem;">
  </div>

</div>