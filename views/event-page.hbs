<div class="row" style="background-color:cornflowerblue; height: 220px;">
    <div class="col" style="margin-top: 3%; margin-left: 12%">
        <h1 style="color: whitesmoke">{{ event.title }}</h1>
        <h3 style="color: whitesmoke; margin-left: 5%">CREATED BY: {{event.creater}}</h3>
    </div>
    <div class="col" style="margin-left: 18%; margin-top: 3%;">
        <form method="POST" action="/events/{{ event.id }}/join">
        {{#if join}}
        <button class="btn btn-sm btn-success" style="padding: 5%; border-radius: 15px; font-size: 1.5rem" data-event-id="{{event._id}}">Already Joined</button>
        {{else }}
        <button class="btn btn-sm btn-danger" style="padding: 5%; border-radius: 15px; font-size: 1.5rem" onclick="onClickJoinEvent(event)" data-event-id="{{event._id}}">Join Event</button>
        {{/if}}

        </form>
